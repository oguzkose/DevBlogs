@using Microsoft.AspNetCore.Identity
@using DevBlogs.Data.Entities
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link "  asp-controller="Blog" asp-action="Index">Bloglarım</a>
    </li>
    <li class="nav-item">
        <a class="nav-link " asp-controller="Blog" asp-action="Create">Blog Yaz</a>
    </li>
    <li class="nav-item">
        <a class="nav-link " asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @((await UserManager.GetUserAsync(User)).Nickname!)</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" onclick="$('#LogoutForm').submit()" style="cursor:pointer">Logout</a>
        <form id="LogoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link " asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link " asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}


