@model HomeIndexViewModel
@using PagedList.Core.Mvc



<div class="container">
    <form asp-controller="Home" asp-action="Index" class="d-none d-md-inline-block form-inline ml-auto mr-0 mr-md-3 my-2 my-md-0">
        <div class="input-group mb-3 ">
            <input asp-for="SearchKeyword" type="text" class="form-control" placeholder="blog,tag,veya içerik ara.." />
            <div class="input-group-append"></div>
            <button class="btn btn-outline-danger" style="padding: 0 10px 0 10px">Ara</button>
        </div>
    </form>
    <div class="row align-content-center">
        @foreach (var blog in Model.Blogs)
        {
            <div class="col-lg-4 col-md-3 mb-4">
                <div class="card border-0 shadow">
                    <img src="~/UserFiles/Blogs/@blog.Id/BlogImage.jpg" class="card-img-top" />
                    <div class="card-body">
                        <div class="row text-center" style="margin:0px auto 10px 0px">
                            <h5 class="card-title text-center w-100"><a asp-controller="Blog" asp-action="Detail" asp-route-id="@blog.Id">@blog.Title</a></h5>
                        </div>
                        <div class="row ml-1">
                            <div><i class="fas fa-tag" style="color:gray"></i></div>
                            <p class="text-muted ml-3 mb-0 ">Tag:  <span class="badge badge-secondary">   @blog.Tag  </span></p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <pager class="pager-container" list="@Model.Blogs" options="@PagedListRenderOptions.Bootstrap4PageNumbersPlusPrevAndNext" asp-action="Index" asp-controller="Home" asp-route-query="@Model.SearchKeyword"></pager>
</div>